# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# MongoDB
MONGODB_URI=mongodb://localhost:27017/certmanager

# Active Directory / LDAP
LDAP_URL=ldap://dc.domain.local
LDAP_BASE_DN=DC=domain,DC=local
LDAP_BIND_DN=CN=svc_certmgr,OU=Service Accounts,DC=domain,DC=local
LDAP_BIND_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# SMTP Configuration
SMTP_HOST=smtp.domain.local
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=certmanager@domain.local
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM=Certificate Manager <certmanager@domain.local>

# Windows Service Account (for PowerShell operations)
SERVICE_ACCOUNT_DOMAIN=DOMAIN
SERVICE_ACCOUNT_USER=svc_certmgr
SERVICE_ACCOUNT_PASSWORD=your_service_account_password_here

# Logging
LOG_LEVEL=info
