# Server Configuration
NODE_ENV=production
PORT=3000
API_PREFIX=/api
CORS_ORIGIN=https://certmanager.yourdomain.com

# MongoDB - Include credentials for authenticated connections
MONGODB_URI=mongodb://certmgr_admin:your_mongo_password@localhost:27017/certmanager?authSource=admin
MONGO_ROOT_USER=certmgr_admin
MONGO_ROOT_PASSWORD=your_mongo_password

# Active Directory / LDAP - Use ldaps:// for encrypted connections
LDAP_URL=ldaps://dc.domain.local
# Set to 'false' only for development with self-signed certs
# LDAP_TLS_REJECT_UNAUTHORIZED=false
LDAP_BASE_DN=DC=domain,DC=local
LDAP_BIND_DN=CN=svc_certmgr,OU=Service Accounts,DC=domain,DC=local
LDAP_BIND_PASSWORD=your_password_here

# JWT Configuration - MUST be at least 32 characters. Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# SMTP Configuration
SMTP_HOST=smtp.domain.local
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=certmanager@domain.local
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM=Certificate Manager <certmanager@domain.local>

# Windows Service Account (for PowerShell operations)
SERVICE_ACCOUNT_DOMAIN=DOMAIN
SERVICE_ACCOUNT_USER=svc_certmgr
SERVICE_ACCOUNT_PASSWORD=your_service_account_password_here

# Logging - Use 'info' or 'warn' in production (never 'debug')
LOG_LEVEL=info
